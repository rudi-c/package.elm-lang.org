# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /reload                     controllers.SearchEngine.reload
GET     /list                       controllers.SearchEngine.listLibraries
GET     /get/:name                  controllers.SearchEngine.getLibraryByName(name : String)
GET     /search/:query              controllers.SearchEngine.searchLibraries(query : String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
